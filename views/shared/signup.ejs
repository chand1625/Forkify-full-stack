<%- include("includes/head.ejs",{pageTitle:"Forkify | Signup"}) %>
    <link rel="stylesheet" href="/styles/form.css">
  </head>
  <body>
    <%- include("includes/header.ejs") %>
    <main class="main-area">
      <section>
        <div class="section-header-container">
          <h2 class="section-header">Signup</h2>
          <p class="section-header-secondary">Signup to submit and like recipes</p>
        </div>
        <form action="/signup" method="POST" class="main-form">
          <div class="form-body">
            <h3 class="form-header">Create your account</h3>
            <% if (sessionData.errorMsg) { %>
              <p class="validation-error"><%= sessionData.errorMsg %>  </p>
              <% } %>
              <div class="input-container">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" value="<%= sessionData.email %>" required>
              </div>
              <div class="input-container">
                <label for="confirmemail">Confirm email</label>
                <input type="email" id="confirmemail" name="confirmemail" value="<%= sessionData.confirmemail %>" required>
              </div>
              <div class="input-container">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" value="<%= sessionData.password %>" required minlength="6">
              </div>
              <button class="form-btn">Submit</button>
              <a href="/login" class="login-signup-toggler">Already having an account? Click here to login</a>
            </div> 
          </form>
        </section>
      </main>
  </body> 
</html>